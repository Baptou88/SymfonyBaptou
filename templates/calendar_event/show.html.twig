{% extends 'base.html.twig' %}

{% block title %}CalendarEvent{% endblock %}

{% block body %}
    <h1>CalendarEvent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ calendar_event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ calendar_event.name }}</td>
            </tr>
            <tr>
                <th>StartAt</th>
                <td>{{ calendar_event.startAt ? calendar_event.startAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndAt</th>
                <td>{{ calendar_event.endAt ? calendar_event.endAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>AllDay</th>
                <td>{{ calendar_event.allDay ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Textcolor</th>
                <td>{{ calendar_event.textcolor }}</td>
            </tr>
            <tr>
                <th>Bgcolor</th>
                <td>{{ calendar_event.bgcolor }}</td>
            </tr>
            <tr>
                <th>Bordercolor</th>
                <td>{{ calendar_event.bordercolor }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ calendar_event.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('calendar_event_index') }}">back to list</a>

    <a href="{{ path('calendar_event_edit', {'id': calendar_event.id}) }}">edit</a>

    {{ include('calendar_event/_delete_form.html.twig') }}
{% endblock %}
