{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <div class="row">
        <div class="col-6">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ project.id }}</td>
                </tr>
                <tr>
                    <th>Code</th>
                    <td>{{ project.code }}</td>
                </tr>
                <tr>
                    <th>Client</th>
                    <td>{{ project.client.name }}</td>
                </tr>
                <tr>
                    <th>Type project</th>
                    <td>{{ project.typeproject }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>ModifiedAt</th>
                    <td>{{ project.ModifiedAt ? project.ModifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-6">
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <td>Name</td>
                    <td>Actions</td>
                </tr>
                </thead>
                <tbody>
                {% for doc in project.doc %}
                    <tr>
                        <td>{{ doc.docname }}</td>
                        <td>
                            {{ include('project/_filedelete.html.twig') }}
                        </td>
                    </tr>

                    {% else %}
                    <td><em>no file attached</em></td>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


    <a href="{{ path('project_index') }}">back to list</a>

    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
